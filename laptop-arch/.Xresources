
! ################################
! font rendering
! ################################

Xft.dpi: 96
! Xft.dpi: 95.78
! Xft.dpi: 192


Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb


! #######################################
! colors
! #######################################

! special
*.foreground:   #ABB2BF
*.background:   #282C34
*.cursorColor:  #ABB2BF

! black
*.color0:       #282C34
*.color8:       #3E4452

! red
*.color1:       #E06C75
*.color9:       #BE5046

! green
*.color2:       #98C379
*.color10:      #98C379

! yellow
*.color3:       #E5C07B
*.color11:      #D19A66

! blue
*.color4:       #61AFEF
*.color12:      #61AFEF

! magenta
*.color5:       #C678DD
*.color13:      #C678DD

! cyan
*.color6:       #56B6C2
*.color14:      #56B6C2

! white
*.color7:       #ABB2BF
*.color15:      #5C6370


! ################################
! urxvt
! ################################

URxvt.depth:		24
URxvt.scrollBar:	false
URxvt.cursorColor:	white
URxvt.scrollBar_right: false
URxvt.scrollBar_floating: false
URxvt.scrollstyle: rxvt

!urxvt.perl-lib:                     /home/gr4yscale/bin/urxvt-font
!urxvt.keysym.Control-Shift-Up:      perl:font:increment
!urxvt.keysym.Control-Shift-Down:    perl:font:decrement
!urxvt.perl-ext-common:              font

urxvt*boldColors: on
urxvt*font:     xft:FiraCode:pixelsize=14:antialias=true:hinting=true:regular
urxvt*boldFont: xft:FiraCode:pixelsize=14:antialias=true:hinting=true:bold

!! Extensions
URxvt.perl-ext-common:	default,matcher,resize-font,url-select,keyboard-select
URxvt.colorUL:		#4682B4

!! url-select
URxvt.keysym.M-u:	perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true


!! clipboard
!URxvt.keysym.M-c:   perl:clipboard:copy
URxvt.keysym.M-v:   perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.keysym.M-c: perl:keyboard-select:activate

!! keyboard-select:
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-r: perl:keyboard-select:search
URxvt.keyboard-select.clipboard: true
URxvt.clipboard.autocopy: true

!! resize-font
URxvt.resize-font.smaller:	C-minus
URxvt.resize-font.bigger:	C-equals

!! Matcher
URxvt.url-launcher:	/usr/bin/xdg-open
URxvt.matcher.button:	1

URxvt.keysym.C-Delete: perl:matcher:last
URxvt.keysym.M-Delete: perl:matcher:list

URxvt.matcher.rend.0: Uline Bold fg5


!! font-size
!
! disable bindings for control + shift:
!URxvt.iso14755: false
!URxvt.iso14755_52: false

URxvt.keysym.C-Down:  resize-font:smaller
URxvt.keysym.C-Up:    resize-font:bigger


! do not scroll with output
URxvt*scrollTtyOutput: false
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true
! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true


URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

!URxvt.font: xft:monospace:size=12
!URxvt*font:     xft:FiraCode:pixelsize=20:antialias=true:hinting=true:regular
!URxvt*boldFont: xft:FiraCode:pixelsize=20:antialias=true:hinting=true:bold


! old font-size config

! font size plugin config
! (installed in ~/.urxvt/ext/font-size

!URxvt.font-size.step: 4
!URxvt.keysym.C-Up:     font-size:increase
!URxvt.keysym.C-Down:   font-size:decrease
!URxvt.keysym.C-S-Up:   font-size:incglobal
!URxvt.keysym.C-S-Down: font-size:decglobal
!URxvt.keysym.C-equal:  font-size:reset
!URxvt.keysym.C-slash:  font-size:show



